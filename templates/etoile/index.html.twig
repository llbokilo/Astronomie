{% extends 'base.html.twig' %}

{% block title %}Etoile index{% endblock %}

{% block body %}
    <h1>Etoile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Diametre</th>
                <th>Description</th>
                <th>Gravite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etoile in etoiles %}
            <tr>
                <td>{{ etoile.id }}</td>
                <td>{{ etoile.Nom }}</td>
                <td>{{ etoile.Diametre }}</td>
                <td>{{ etoile.Description }}</td>
                <td>{{ etoile.Gravite }}</td>
                <td>
                    <a href="{{ path('etoile_show', {'id': etoile.id}) }}">show</a>
                    <a href="{{ path('etoile_edit', {'id': etoile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etoile_new') }}">Create new</a>
{% endblock %}
